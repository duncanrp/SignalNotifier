<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Settings_Vibration">


    <LinearLayout
        android:id="@+id/vibrationSettingsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/w"
            android:layout_width="144dp"
            android:layout_height="47dp"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Vibration"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/vibrationToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ToggleButton" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/vibrationSettingsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vibrationSettingsLL">


        <TextView
            android:id="@+id/vibrationStyleTxt"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Vibration Style"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/vibrationStyleSelector"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/vibrationStyleTxt" />

    </RelativeLayout>


</RelativeLayout>